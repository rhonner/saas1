generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum AppointmentStatus {
  PENDING
  CONFIRMED
  NOT_CONFIRMED
  CANCELED
  NO_SHOW
}

enum MessageType {
  CONFIRMATION
  REMINDER
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

// Models
model User {
  id                   String        @id @default(cuid())
  name                 String
  email                String        @unique
  password             String
  clinicName           String
  avgAppointmentValue  Decimal       @default(0) @db.Decimal(10, 2)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  patients             Patient[]
  appointments         Appointment[]
  settings             Settings?
}

model Patient {
  id           String        @id @default(cuid())
  name         String
  phone        String
  email        String?
  notes        String?
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@unique([userId, phone])
  @@index([userId])
}

model Appointment {
  id                  String            @id @default(cuid())
  dateTime            DateTime
  status              AppointmentStatus @default(PENDING)
  patientId           String
  userId              String
  confirmationSentAt  DateTime?
  reminderSentAt      DateTime?
  confirmedAt         DateTime?
  notes               String?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  patient             Patient           @relation(fields: [patientId], references: [id], onDelete: Cascade)
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  messageLogs         MessageLog[]

  @@index([userId])
  @@index([patientId])
  @@index([dateTime])
  @@index([status])
}

model MessageLog {
  id            String        @id @default(cuid())
  appointmentId String
  type          MessageType
  sentAt        DateTime      @default(now())
  response      String?
  respondedAt   DateTime?
  status        MessageStatus @default(SENT)
  createdAt     DateTime      @default(now())

  appointment   Appointment   @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@index([appointmentId])
}

model Settings {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  confirmationHoursBefore Int      @default(24)
  reminderHoursBefore     Int      @default(6)
  confirmationMessage     String   @default("Olá {nome}, sua consulta na {clinica} está agendada para {data} às {hora}. Responda 1 para CONFIRMAR ou 2 para CANCELAR.")
  reminderMessage         String   @default("Oi {nome}, ainda não recebemos sua confirmação para {data} às {hora} na {clinica}. Responda 1 para CONFIRMAR ou 2 para CANCELAR.")
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
